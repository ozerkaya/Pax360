@model Pax360.Models.CustomerListModel
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@using X.PagedList.Mvc.Core;
@using X.PagedList;
@using X.PagedList.Web.Common;

@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var durumList = new List<SelectListItem>()
{
             new SelectListItem { Text = "Seçiniz", Value = "" },
             new SelectListItem { Text = "Sipariş Oluşturuldu", Value = "Sipariş Oluşturuldu" },
             new SelectListItem { Text = "Kurulum Aşamasında", Value = "Kurulum Aşamasında" },
             new SelectListItem { Text = "Kargoya Verildi", Value = "Kargoya Verildi" },
             new SelectListItem { Text = "Teslim Edildi", Value = "Teslim Edildi" },
    };
}


@using (Html.BeginForm())
{
    <div class="content">
        @await Html.PartialAsync("_Messages", new Dictionary<string, string> { { "ErrorMessage", Model.ErrorMessage }, { "SuccessMessage", Model.SuccessMessage } })
        <div class="container">
            @await Html.PartialAsync("_PageHeader", new Dictionary<string, string> { { "UserName", @HttpContextAccessor.HttpContext.Session.GetString("NAMESURNAME") }, { "Page", "Müşteri Listesi" } })
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-color panel-info">
                        <div class="panel-heading" style="padding:8px 10px;">
                            <a href="#"><h3 class="panel-title">MÜŞTERİ İŞLEMLERİ</h3></a>
                        </div>
                        <div class="card-box" style="padding: 18px !important;border:none;margin-bottom:0px;">
                            <div class="row">
                                <div class="col-lg-2">
                                    <div class="form-group">
                                        @Html.Label("Müşteri Adı")
                                        @Html.TextBoxFor(Ok => Ok.MusteriAdi, new { @class = "form-control", autocomplete = "off" })
                                    </div>
                                </div>
                                <div class="col-lg-2">
                                    <button name="operation" type="submit" class="btn btn-facebook width-md waves-effect" value="Search" style="margin-top:21px;padding:7px;min-width: 70px;">Ara</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-color panel-info">
                        <div class="panel-heading" style="border: none !important; padding: 15px 20px; border-radius:4px 4px 0 0;background-color: #387ec3;color: #fff;">
                            <a href="#"><h3 class="panel-title" style="color:#fff;"><a href="/Customers/CustomerList" style="padding-right: 10px;"><i class="fas fa-refresh"></i></a> MÜŞTERİ LİSTESİ </h3></a>
                        </div>
                        <div class="panel-body" style="padding:0px !important">
                            <div id="no-more-tables">
                                <table class="table m-0 col-sm-12 table-colored-bordered table-striped table-condensed table-bordered-info cf sortable">
                                    <thead class="cf">
                                        <tr>
                                            <th>Müşteri Adı</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model.CustomerItemList != null)
                                        {
                                            foreach (var item in Model.CustomerItemList)
                                            {
                                                <tr style="margin-top: 10px;">
                                                    <td data-title="Müşteri Adı">
                                                        @item.MusteriAdi
                                                    </td>
                                                    <td data-title="İşlemler" style="width:20px;">
                                                        <div class="btn-group">
                                                            <button type="button" class="btn btn-facebook width-md waves-effect" data-toggle="dropdown" aria-expanded="false"><i class="fas fa-cog" style="color: #fff;"></i></button>
                                                            <ul class="dropdown-menu dropdown-menu-right" style="padding:5px;">
                                                                <li>
                                                                    <a class="btn btn-default btn-block" href="/Customers/Customer?cariGuid=@item.Cari_Guid" style="background-color: transparent;margin-top:3px;">İncele</a>
                                                                </li>
                                                            </ul>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>

                        </div>

                        <div class="text-right">
                            <center>
                                <ul class="pagination pagination-split m-t-0">
                                    @Html.PagedListPager(new StaticPagedList<Pax360.Models.CustomerListItemModel>(Model.CustomerItemList, Model.PagingMetaData), page => Url.Action("CustomerList", new
                                        {
                                            page,
                                        }), PagedListRenderOptions.ClassicPlusFirstAndLast)
                                </ul>
                            </center>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>


    @Html.HiddenFor(ok => ok.ID)
}

<script>
    function appID(id) {
        jQuery("#ID").val(id);
    }

</script>