@model Pax360.Models.OrderDetailsModel
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@using (Html.BeginForm())
{

    <div class="content">
        <div class="container">
            <div class="card-box" style="padding: 18px !important;border:none;margin-bottom:3px;">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-group">
                            @Html.Label("Sipariş oluşturacağınız firmayı seçiniz")
                            @Html.DropDownListFor(ok => ok.SelectedCari, new SelectList(Model.MikroCompanyList, "Value", "Text"), new { @class = "form-control select2" })
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-group">
                            <button class="btn btn-info btn-lg btn-block waves-effect waves-light" type="submit" style="background: #0baae9 !important; border: 1px solid #0baae9 !important; ">Devam Et</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}

