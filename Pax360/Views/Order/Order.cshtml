                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        @Html.Label("Cihaz Modeli")
                                        @Html.DropDownListFor(ok => ok.CihazModeli, new SelectList(@Model.MikroProductList, "Value", "Text"), new { @class = "form-control select2" })
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        @Html.Label("Doviz Cinsi")
                                        @Html.DropDownListFor(ok => ok.DovizCinsi, new SelectList(@DovizList, "Value", "Text"), new { @class = "form-control select2" })
                                    </div>
                                </div>
                            </div>
