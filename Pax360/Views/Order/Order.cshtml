                                <div class="col-lg-12">
                                    <div class="form-group">
                                        @Html.Label("Adet")
                                        @Html.TextBoxFor(Ok => Ok.Adet, new { @class = "form-control", autocomplete = "off", type = "number" })
                                    </div>
                                </div>

                            </div>

