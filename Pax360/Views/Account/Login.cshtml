@model Pax360.Models.LoginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr" xml:lang="tr" style="background-color:darkgray">
<head>
    <title>PAX 360</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/UIFramework/Admin/assets/css/Loginbootstrap.min.css" rel="stylesheet" />
    <link href="~/UIFramework/Admin/assets/css/Loginstyle.css" rel="stylesheet" />
</head>



<body style="overflow-x: hidden;overflow-y: hidden;background-color:darkgray;">

    <video autoplay muted loop id="myVideo" style="width:100%;position: absolute;height:auto;">
        <source src="~/UIFramework/Admin/video/back2.mp4" type="video/mp4" />
    </video>


    @using (Html.BeginForm())
    {
        <div class="preloader">
            <svg class="circular" viewBox="25 25 50 50">
                <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="2" stroke-miterlimit="10" />
            </svg>
        </div>
        <section id="wrapper" class="login-register login-sidebar">
            <div class="login-box card">
                <div class="card-body">
                    <a href="/" class="text-center db"><img src="~/UIFramework/Admin/assets/images/logoBig.jpg" alt="Home" style="width:240px;" /></a>

                    <div class="form-group m-t-40">
                        <div class="col-xs-12">
                            @Html.TextBoxFor(ok => ok.Username, new { @class = "form-control", placeholder = "E-Mail", required = "" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-12">
                            @Html.PasswordFor(ok => ok.Password, new { @class = "form-control", type = "password", required = "", placeholder = "Password", autocomplete = "off" })
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="checkbox checkbox-primary pull-left p-t-0">
                            <input id="checkbox-signup" name="hatirla" type="checkbox">
                            <label for="checkbox-signup"> Beni Hatırla </label>
                        </div>
                    </div>
                    <div class="form-group text-center m-t-20">
                        <div class="col-xs-12">
                            <button class="btn btn-info btn-lg btn-block waves-effect waves-light" type="submit" style="background: #0baae9 !important; border: 1px solid #0baae9 !important; ">Login</button>
                        </div>
                    </div>

                    @if (!string.IsNullOrWhiteSpace(Model.SuccessMessage))
                    {
                        <center>
                            <span class="label label-success">
                                @Model.SuccessMessage
                            </span>
                        </center>

                    }

                    @if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
                    {
                        <center>
                            <span class="label label-danger">
                                @Model.ErrorMessage
                            </span>
                        </center>

                    }
                </div>
            </div>

        </section>
    }


    <script src="~/UIFramework/Admin/assets/js/jquery.min.js"></script>
    <script src="~/UIFramework/Admin/assets/js/popper.min.js"></script>
    <script src="~/UIFramework/Admin/assets/js/Loginbootstrap.min.js"></script>
    <script src="~/UIFramework/Admin/assets/js/jquery.slimscroll.js"></script>
    <script src="~/UIFramework/Admin/assets/js/waves.js"></script>
    <script src="~/UIFramework/Admin/assets/js/sidebarmenu.js"></script>
    <script src="~/UIFramework/Admin/assets/js/sticky-kit.min.js"></script>
    <script src="~/UIFramework/Admin/assets/js/sparkline.min.js"></script>
    <script src="~/UIFramework/Admin/assets/js/custom.min.js"></script>
    <script src="~/UIFramework/Admin/assets/js/switcher.js"></script>

</body>

</html>