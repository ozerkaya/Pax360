    <script src="~/UIFramework/Admin/assets/plugins/jquery.filer/js/jquery.filer.js"></script>
    <script src="~/UIFramework/Admin/assets/plugins/jquery.filer/js/jquery.fileuploads.init.js"></script>

    <script src="~/UIFramework/Admin/assets/js/ImageTools.js"></script>
    <script src="~/UIFramework/Admin/assets/plugins/dropify/dist/js/dropify.js"></script>
    <script src="~/UIFramework/Admin/assets/js/DropifySettings.js"></script>

</body>
</html>