@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="">
<head>
    <meta charset="utf-8">
    <meta name="robots" content="noindex, nofollow">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Pax TSM">
    <meta name="author" content="Özer KAYA">
    <link rel="shortcut icon" href="~/UIFramework/Admin/assets/images/favicon.ico">
    <title>PAX Turkey</title>

    <link href="~/UIFramework/Admin/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/UIFramework/Admin/assets/css/core.css" rel="stylesheet" type="text/css" />
    <link href="~/UIFramework/Admin/assets/css/components.css" rel="stylesheet" type="text/css" />
    <link href="~/UIFramework/Admin/assets/css/icons.css" rel="stylesheet" type="text/css" />
    <link href="~/UIFramework/Admin/assets/css/pages.css" rel="stylesheet" type="text/css" />
    <link href="~/UIFramework/Admin/assets/css/menu.css" rel="stylesheet" type="text/css" />
    <link href="~/UIFramework/Admin/assets/css/responsive.css" rel="stylesheet" type="text/css" />
    <link href="~/UIFramework/Admin/assets/css/card2.css" rel="stylesheet" type="text/css" />
    <link href="~/UIFramework/Admin/assets/plugins/switchery/switchery.min.css">
    <link href="~/UIFramework/Admin/assets/plugins/select2/css/select2.min.css" rel="stylesheet" />
    <link href="~/UIFramework/Admin/assets/plugins/timepicker/bootstrap-timepicker.min.css" rel="stylesheet" />
    <link href="~/UIFramework/Admin/assets/plugins/bootstrap-datepicker/css/bootstrap-datepicker3.css" rel="stylesheet" type="text/css" />
    <link href="~/UIFramework/Admin/assets/plugins/bootstrap-toggle/bootstrap-toggle.min.css" rel="stylesheet" type="text/css" />
